namespace skew {
  using terminal

  var input = `document`.getElementById("input")
  var output1 = `document`.getElementById("output1")
  var output2 = `document`.getElementById("output2")

  string runEmitter(Emitter emitter, ObjectSymbol global) {
    emitter.visit(global)
    var sources = emitter.sources()
    var text = ""
    for (var i = 0; i < sources.size(); i++) {
      var source = sources[i]
      if (i != 0) {
        text += "\n"
      }
      text += "[" + source.name + "]\n" + source.contents
    }
    return text
  }

  void update() {
    var log = Log()
    var global = compile(log, [Source("<stdin>", input.value)])
    output1.value = log.hasErrors() ? log.toString() : runEmitter(JsEmitter(), global)
    output2.value = log.hasErrors() ? "" : runEmitter(CppEmitter(), global)
  }

  @EntryPoint
  void main() {
    input.oninput = update
    update()
  }
}
